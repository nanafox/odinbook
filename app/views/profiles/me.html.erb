<div class="flex min-h-screen">
  <%= render "shared/page_sidebar" %>
  <!-- Profile Content -->
  <main class="w-3/4 p-6">
    <div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg p-6">
      <!-- Avatar -->
      <div class="flex items-center space-x-4">
        <img
          src="<%= rails_storage_proxy_path(@profile.avatar) %>"
          alt="User Avatar"
          class="w-20 h-20 rounded-full"
        >
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= @profile.name %></h1>
          <p class="text-gray-500">@<%= @profile.username %></p>
        </div>
      </div>
      <!-- Bio -->
      <p class="mt-4 text-gray-700"><%= @profile.bio %></p>
      <!-- Edit Profile Button -->
      <div class="mt-4">
        <%= link_to "Edit Profile",
        edit_profile_path(@profile),
        class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
      </div>
      <!-- User Posts -->
      <div class="mt-6 border-t pt-4">
        <h2 class="text-xl font-semibold text-gray-800">Recent Posts</h2>
        <div class="mt-4 space-y-4">
          <div class="p-4 bg-gray-50 rounded-lg shadow">
            <p class="text-gray-800">This is a sample post. Excited to share more thoughts here!</p>
            <span class="text-sm text-gray-500">Posted 2 hours ago</span>
          </div>
          <div class="p-4 bg-gray-50 rounded-lg shadow">
            <p class="text-gray-800">Learning Rails has been an amazing journey so far! ðŸš€</p>
            <span class="text-sm text-gray-500">Posted 1 day ago</span>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
