<!-- Sidebar -->
<aside class="w-64 min-h-screen bg-black fixed">
  <div class="flex flex-col px-3 py-4 text-white">
    <% sidebar_link_class =
      "flex items-center px-3 py-3 text-white rounded-full hover:bg-gray-900 transition-colors transition-200" %>
    <!-- Logo -->
    <div class="mb-4 px-3">
      <%= link_to "#", class: "text-white" do %>
        <%= render "shared/logo" %>
      <% end %>
