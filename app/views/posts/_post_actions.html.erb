<div class="mt-3 flex items-center space-x-8 text-gray-500 justify-between">
  <!-- comment -->
  <%= link_to post, data: {turbo_frame: "_top"}, class: "group flex items-center text-gray-500 hover:text-blue-400" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
          ></path>
    </svg>
  <% end %>

  <!-- retweet -->
  <button class="flex items-center group">
    <svg
        class="w-5 h-5 group-hover:text-green-400"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
            ></path>
    </svg>
  </button>

  <!-- like -->
  <%= button_to "#",
    class: "group flex items-center text-gray-500 hover:text-red-400 border-none",
    type: "button",
    data: { controller: "likes",
            action: "likes#toggle",
            likes_type_value: "Post",
            likes_id_value: post.id,
            likes_liked_value: current_user.liked?(post),
            likes_count_value: post.likes_count
    } do %>
    <svg
      data-likes-target="icon"
      class="w-5 h-5 mr-2 border-none"
      fill="<%= current_user.liked?(post) ? 'red' : 'none' %>"
      stroke="currentColor"
      viewBox="0 0 24 24"
      >
      <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 21l-1.45-1.35C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.15L12 21z"
          >
      </path>
    </svg>
    <span data-likes-target="count"></span>
  <% end %>

  <!-- share -->
  <button class="flex items-center group">
    <svg
        class="w-5 h-5 group-hover:text-blue-400"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"
            ></path>
    </svg>
  </button>
</div>
