<% content_for :title, make_title("New post") %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New post</h1>

  <%= turbo_frame_tag @post do %>
    <%= render "form", post: @post %>
  <% end %>

  <%= link_to "Back to posts",
  posts_path,
  class:
    "mt-2 ml-2 rounded-md px-3.5 py-2.5 bg-white text-gray-800 hover:bg-gray-100 inline-block font-medium" %>
</div>
