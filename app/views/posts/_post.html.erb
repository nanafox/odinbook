<%= turbo_frame_tag post do %>
  <div
    class="
      p-4 hover:bg-gray-900/50 transition-colors border-b border-t border-gray-800
    "
  >
    <div class="flex space-x-4">
      <!-- Author Avatar -->
      <div class="flex-shrink-0">
        <% if post.author.avatar.attached? %>
          <%= image_tag post.author.avatar, class: "w-10 h-10 rounded-full" %>
        <% else %>
          <div
            class="
              w-10 h-10 rounded-full bg-gray-700 flex items-center justify-center text-white
              font-bold
            "
          >
            <%= post.author.name.split(" ").map { |n| n[0] }.join %>
          </div>
        <% end %>
      </div>
      <!-- Post Content -->
      <div class="flex-1 min-w-0">
        <div class="flex items-center text-sm">
          <span class="font-bold text-white"><%= post.author.name %></span>
          <span class="mx-1 text-gray-500">Â·</span>
          <span class="text-gray-500"><%= time_ago_in_words(post.created_at) %>
            ago</span>
        </div>

        <div class="mt-2 text-white"><%= post.content %></div>
        <!-- Post Actions -->
        <div class="mt-3 flex items-center justify-between max-w-md">
          <%= link_to post, data: {turbo_frame: "_top"}, class: "group flex items-center text-gray-500 hover:text-blue-400" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
              ></path>
            </svg>
          <% end %>
          <!-- Post Likes -->
          <%= button_to "#",
          class: "group flex items-center text-gray-500 hover:text-red-400 border-none",
          type: "button",
          data: { controller: "likes",
                  action: "likes#toggle",
                  likes_type_value: "Post",
                  likes_id_value: post.id,
                  likes_liked_value: current_user.liked?(post),
                  likes_count_value: post.likes_count
                  } do %>
            <svg
              data-likes-target="icon"
              class="w-5 h-5 mr-2 border-none"
              fill="<%= current_user.liked?(post) ? 'red' : 'none' %>"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 21l-1.45-1.35C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.15L12 21z"
              >
              </path>
            </svg>
            <span data-likes-target="count"></span>
          <% end %>

          <% if allowed_to?(:edit?, post) %>
            <%= link_to edit_post_path(post), class: "group flex items-center text-gray-500 hover:text-green-400" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                ></path>
              </svg>
            <% end %>
          <% end %>

          <% if allowed_to?(:destroy?, post) %>
            <%= button_to post,
                  method: :delete,
                  class: "group flex items-center text-gray-500 hover:text-red-400",
                  data: { turbo_confirm: "Are you sure you want to delete this post?" } do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                ></path>
              </svg>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
